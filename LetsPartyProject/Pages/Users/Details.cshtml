@page
@model LetsPartyProject.Pages.Users.DetailsModel

@{ ViewData["Title"] = "Member Details"; }

<section id="sectionTeams" class="container">
    <header class="container mb-4">
        <div id="headerIndexPages" class="row align-middle">
            <div class="col-9">
                <h1>Member Details</h1>
            </div>
            <hr />
        </div>
    </header>
    <div id="formPages" class="row p-4">
        <div class="col">
            <div class="form-row">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Nickname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Nickname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Sector)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Sector)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.DDD)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.DDD)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Confirm)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Confirm)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User.Team)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.Team.TeamName)
                    </dd>
                </dl>
            </div>
            <div class="form-group pt-4">
                <a class="btn btn-block btn-outline-warning" asp-page="./Edit" asp-route-id="@Model.User.Id">Edit</a>
                <a class="btn btn-block btn-outline-info" asp-page="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>