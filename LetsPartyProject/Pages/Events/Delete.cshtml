@page
@model LetsPartyProject.Pages.Events.DeleteModel

@{ ViewData["Title"] = "Event Delete"; }

<section id="sectionTeams" class="container">
    <header class="container mb-4">
        <div id="headerIndexPages" class="row align-middle">
            <div class="col-9">
                <h1>Event Delete</h1>
            </div>
            <hr />
        </div>
    </header>
    <div id="formPages" class="row p-4">
        <div class="col">
            <div class="form-row">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.EventName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.EventName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.EventDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.EventDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.City)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.City)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.TypeEvent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.TypeEvent)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.Team)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.Team.TeamName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Event.Calendar)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.Calendar.CalendarName)
                    </dd>
                </dl>
            </div>
            <form class="pt-4" method="post">
                <input type="hidden" asp-for="Event.Id" />
                <input type="submit" value="Delete" class="btn btn-block btn-outline-danger" />
                <a class="btn btn-block btn-outline-info" asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</section>