@page
@model LetsPartyProject.Pages.Events.EditModel

@{ ViewData["Title"] = "Event Edit"; }

<section id="sectionTeams" class="container">
    <header class="container mb-4">
        <div id="headerIndexPages" class="row align-middle">
            <div class="col-9">
                <h1>Event Edit</h1>
            </div>
            <hr />
        </div>
    </header>
    <div id="formPages" class="row p-4">
        <div class="col">
            <form method="post">
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Event.Id" />
                    <div class="form-group col">
                        <label asp-for="Event.EventName" class="control-label"></label>
                        <input asp-for="Event.EventName" class="form-control" />
                        <span asp-validation-for="Event.EventName" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Event.EventDate" class="control-label"></label>
                        <input asp-for="Event.EventDate" class="form-control" />
                        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Event.City" class="control-label"></label>
                        <input asp-for="Event.City" class="form-control" />
                        <span asp-validation-for="Event.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="Event.TypeEvent" class="control-label"></label>
                        <input asp-for="Event.TypeEvent" class="form-control" />
                        <span asp-validation-for="Event.TypeEvent" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Event.TeamId" class="control-label"></label>
                        <select asp-for="Event.TeamId" class="form-control" asp-items="ViewBag.TeamId">
                            <option value="">-- Select your Team --</option>
                        </select>
                        <span asp-validation-for="Event.TeamId" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Event.CalendarId" class="control-label"></label>
                        <select asp-for="Event.CalendarId" class="form-control" asp-items="ViewBag.CalendarId">
                            <option value="">-- Select your Calendar --</option>
                        </select>
                        <span asp-validation-for="Event.CalendarId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group pt-4">
                    <input type="submit" value="Save" class="btn btn-block btn-outline-success" />
                    <a class="btn btn-block btn-outline-info" asp-page="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
