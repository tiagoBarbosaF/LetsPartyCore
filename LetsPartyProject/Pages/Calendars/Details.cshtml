@page
@model LetsPartyProject.Pages.Calendars.DetailsModel

@{ ViewData["Title"] = "Calendar Details"; }

<section id="sectionTeams" class="container">
    <header class="container mb-4">
        <div id="headerIndexPages" class="row align-middle">
            <div class="col-9">
                <h1>Calendar Details</h1>
            </div>
            <hr />
        </div>
    </header>
    <div id="formPages" class="row p-4">
        <div class="col">
            <div class="form-row">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Calendar.CalendarName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Calendar.CalendarName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Calendar.Team)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Calendar.Team.TeamName)
                    </dd>
                </dl>
            </div>
            <div class="form-group pt-4">
                <a class="btn btn-block btn-outline-warning" asp-page="./Edit" asp-route-id="@Model.Calendar.Id">Edit</a>
                <a class="btn btn-block btn-outline-info" asp-page="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>